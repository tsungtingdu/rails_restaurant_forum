 <div class="container"> 
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation" ><a href="/">Restaurants</a></li>
      <li role="presentation" class="active"><a href="/restaurants/feeds">Feeds</a></li>
      <li role="presentation"><a href="/restaurants/ranking">Top 10</a></li>
    </ul>
  </div>
  <br> 
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Latest comments</h3>
        </div>
        <div class="panel-body">
        <% @recent_comments.each do |comment| %>
        <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
        <p><%= comment.content %></p>
        <p>by <%= link_to comment.user.name, user_path(comment.user) %></p>
        <hr>
        <% end %>
        </div>
      </div>
    </div>  
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Neweset restaurants</h3>
        </div>
        <div class="panel-body">
          <% @recent_restaurants.each do |restaurant| %>
            <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
            <p><%= restaurant.category.name %></p>
            <p><%= restaurant.description %></p>
            <hr>
          <% end %>
        </div>
      </div>
    </div>    
  </div>   
</div>