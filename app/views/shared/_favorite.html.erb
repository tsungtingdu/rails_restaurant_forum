 <% if restaurant.favorited?(current_user) %>
  <%= link_to 'Remove favorite', unfavorite_restaurant_path(restaurant), method: :post, class: "btn btn-warning btn-sm" %>
<% else %>
  <%= link_to 'Add to favorite', favorite_restaurant_path(restaurant), method: :post, class: "btn btn-primary btn-sm" %>
<% end %>